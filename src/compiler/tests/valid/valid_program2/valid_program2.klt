val frase: String = "El factorial es :";

fun potencia (base: Int; exp: Int) : Int {
  var resultado: Int = 1;

  while (exp > 0) {
    resultado = resultado * base;
    exp = exp -1;
  }

  return resultado;
}

fun main () : None {

    var acabar: Boolean = false;
    var base: Int = 10;
    var exp: Int = 4;
    var factorialRes: Int;

    while (!acabar) {

       factorialRes = potencia(base, exp);
       print(frase);
       //print(factorialRes);
       base = base -1;

       if (exp <= 0) {
           acabar = true;
       }
    }

    print("Fin del programa");
}