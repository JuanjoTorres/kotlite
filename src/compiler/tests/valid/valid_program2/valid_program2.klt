fun factorial (n: Int) : None {
  var resultado: Int;

  if (n == 0) {
    resultado = 1;
  } else {
    n = n - 1;
    resultado = factorial(n);
    resultado = resultado * n;
  }

  return resultado;
}

fun main () : None {

    var acabar: Boolean = false;
    var num: Int = 10;
    var factorialRes: Int;

    while (!acabar) {

       factorialRes = factorial(num);
       print(num, factorialRes);
       num = num -1;
       if (num <= 0) {
           acabar = true;
       }
    }

    print("Fin del programa");
    return;
}