val constanteGlobal: Int = 2;

fun main (): None {
    var result: Int;

    print("Número introducido = %d", constanteGlobal);

    result = (constanteGlobal * constanteGlobal);
    print("Al cuadrado = %d", result);

    result = result * 4;
    print("Multiplicado por 4 = %d", result);

    result = result / 2;
    print("Dividido por 2 = %d", result);

    result = 100 + result;
    print("Más 100 = %d", result);

    print("Menos 50  = %d", ((-50) + result));
}